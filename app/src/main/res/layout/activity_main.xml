<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        app:layout_constraintStart_toEndOf="@+id/logo_start_activ"
        app:layout_constraintTop_toTopOf="@id/logo_start_activ"
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="15dp"
        android:text="Voris education"
        android:textSize="25dp"
        android:textColor="#29A82E"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/logo_start_activ"
        android:src="@drawable/voris_images_icon_project"
        android:layout_marginStart="26dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <RelativeLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/btn1"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_start_background"
            android:text="Play"
            android:textAllCaps="false"
            android:textColor="#29A82E"
            android:textSize="40dp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@id/btn1"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_start_background"
            android:text="Result"
            android:textAllCaps="false"
            android:textColor="#29A82E"
            android:textSize="40dp" />


        <Button
            android:id="@+id/btn4"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_below="@id/btn2"
            android:layout_alignParentStart="true"
            android:background="@drawable/button_start_background"
            android:text="Exit"
            android:textAllCaps="false"
            android:textColor="#29A82E"
            android:textSize="40dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>