<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        app:layout_constraintStart_toEndOf="@+id/all_result_logo"
        app:layout_constraintTop_toTopOf="@id/all_result_logo"
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="15dp"
        android:text="Voris education"
        android:textSize="25dp"
        android:textColor="#29A82E"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/all_result_logo"
        android:src="@drawable/voris_images_icon_project"
        android:layout_marginStart="26dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <ListView
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/all_result_logo"
        android:id="@+id/home_list"
        android:layout_width="match_parent"
        android:divider="@null"
        android:layout_height="match_parent"/>

    <ImageButton
        android:id="@+id/all_result_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/button_back"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
        android:layout_width="60dp"
        android:layout_height="60dp"/>
    <ImageButton
        android:id="@+id/clear_data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ic_baseline_delete_outline_24"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>